{
  "name": "lsp-server",
  "version": "1.0.0",
  "description": "ZX Spectrum BASIC Language Server",
  "main": "out/server.js",
  "bin": {
    "zx-lsp-server": "./out/server.js"
  },
  "scripts": {
    "build": "tsc -p ./",
