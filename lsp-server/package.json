    "test": "jest --coverage --no-watch"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "vscode-languageserver": "^9.0.0",
    "vscode-languageserver-textdocument": "^1.0.0",
    "syntax-definitions": "file:../syntax-definitions"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "esbuild": "^0.18.0"
  }
}
