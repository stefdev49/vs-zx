{
  "name": "zx-basic-vscode-extension",
  "repository": "git+https://github.com/stef/vs-zx.git",
  "displayName": "ZX BASIC Development Environment",
  "version": "1.0.92",
  "description": "VS Code extension for ZX Spectrum BASIC development with Interface 1 transfer",
  "license": "MIT",
  "engines": {
    "vscode": "^1.94.0",
    "node": ">=18"
  },
  "categories": [
    "Languages",
    "Other"
  ],
  "contributes": {
    "languages": [
      {
        "id": "zx-basic",
        "aliases": [
          "ZX BASIC",
          "zx-basic"
        ],
        "extensions": [
          ".bas",
          ".zxbas"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "zx-basic",
        "scopeName": "source.zx-basic",
        "path": "./out/syntaxes/zx-basic.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "zx-basic.transfer",
        "title": "Transfer to ZX Spectrum",
        "category": "ZX BASIC"
      },
      {
        "command": "zx-basic.saveAsTzx",
        "title": "Save as TZX",
        "category": "ZX BASIC"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "zx-basic.transfer",
          "when": "editorLangId == zx-basic"
        },
        {
          "command": "zx-basic.saveAsTzx",
          "when": "editorLangId == zx-basic"
        }
      ],
      "editor/title": [
        {
          "command": "zx-basic.transfer",
          "alt": "zx-basic.transfer",
          "when": "editorLangId == zx-basic",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "zx-basic.saveAsTzx",
          "when": "editorLangId == zx-basic",
          "group": "1_modification"
        }
      ]
    },
    "configuration": [
      {
        "title": "ZX BASIC",
        "properties": {
          "zxBasic.model": {
            "type": "string",
            "enum": [
              "48K",
              "128K",
              "Interface1"
            ],
            "default": "48K",
            "description": "Target ZX Spectrum model for language features and validation"
          },
          "zxBasic.strictMode": {
            "type": "boolean",
            "default": false,
            "description": "Warn about non-standard BASIC syntax and features not available in target model"
          },
          "zxBasic.lineNumberIncrement": {
            "type": "number",
            "default": 10,
            "description": "Default increment for auto-numbering lines (e.g., 10, 20, 30...)"
          },
          "zxBasic.maxLineLength": {
            "type": "number",
            "default": 255,
            "description": "Warn when a line exceeds this length (ZX Spectrum supports up to 255 chars)"
          },
          "zxBasic.uppercaseKeywords": {
            "type": "boolean",
            "default": true,
            "description": "Auto-uppercase keywords on completion and formatting"
          },
          "zxBasic.trace.server": {
            "type": "string",
            "enum": [
              "off",
              "messages",
              "verbose"
            ],
            "default": "off",
            "description": "Trace the communication between VS Code and the language server"
          },
          "zx-basic.serialPort": {
            "type": "string",
            "default": "/dev/ttyUSB0",
            "description": "The serial port for RS232 transfer"
          },
          "zx-basic.baudRate": {
            "type": "number",
            "default": 9600,
            "enum": [
              9600,
              19200,
              38400
            ],
            "description": "Baud rate for RS232 communication"
          }
        }
      }
    ]
  },
  "activationEvents": [
    "onLanguage:zx-basic",
    "onCommand:zx-basic.transfer",
    "onCommand:zx-basic.saveAsTzx"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run prepare-extension",
    "prepare-extension": "cd .. && npm run build:tsc && cd lsp-server && npm run bundle || true && cd ../vscode-extension && npm run bundle && node ./scripts/copy-built.js",
    "clean": "rm -rf out && mkdir -p out && echo 'cleaned'",
    "compile": "tsc -p ./",
    "bundle": "npx esbuild src/extension.ts --bundle --platform=node --external:vscode --external:serialport --outfile=out/extension.js --target=node18 --sourcemap",
    "dev": "npm run compile && node ./scripts/copy-built.js",
    "build": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.0"
  },
  "optionalDependencies": {
    "serialport": "^13.0.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.94.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^2.2.42",
    "@types/node": ">=20.0.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "glob": "^8.0.0",
    "mocha": "^10.0.0",
    "typescript": "^4.9.0",
    "vsce": "^2.15.0",
    "esbuild": "^0.18.0"
  }
}
