{
  "name": "zx-basic-vscode-extension",
  "repository": "git+https://github.com/stef/vs-zx.git",
  "displayName": "ZX BASIC Development Environment",
  "version": "1.0.185",
  "description": "VS Code extension for ZX Spectrum BASIC development with Interface 1 transfer",
  "license": "MIT",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.94.0",
    "node": ">=20"
  },
  "categories": [
    "Languages",
    "Other"
  ],
  "contributes": {
    "languages": [
      {
        "id": "zx-basic",
        "aliases": [
          "ZX BASIC",
          "zx-basic"
        ],
        "extensions": [
          ".bas",
          ".zxbas"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "zx-basic",
        "scopeName": "source.zx-basic",
        "path": "./out/syntaxes/zx-basic.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "zx-basic.transfer",
        "title": "Send via RS232",
        "category": "ZX BASIC",
        "icon": "$(arrow-up)"
      },
      {
        "command": "zx-basic.receiveFromZx",
        "title": "Receive via RS232",
        "category": "ZX BASIC",
        "icon": "$(arrow-down)"
      },
      {
        "command": "zx-basic.testRS232",
        "title": "Test RS232 Connection",
        "category": "ZX BASIC",
        "icon": "$(plug)"
      },
      {
        "command": "zx-basic.listSerialPorts",
        "title": "List Serial Ports",
        "category": "ZX BASIC",
        "icon": "$(list-flat)"
      },
      {
        "command": "zx-basic.saveAsTzx",
        "title": "Save as TZX",
        "category": "ZX BASIC"
      },
      {
        "command": "zx-basic.playToZx",
        "title": "Play to ZX Spectrum",
        "category": "ZX BASIC",
        "icon": "$(play)"
      },
      {
        "command": "zx-basic.stopTzxPlayback",
        "title": "Stop ZX Playback",
        "category": "ZX BASIC",
        "icon": "$(debug-stop)"
      },
      {
        "command": "zx-basic.loadFromMdr",
        "title": "Load from MDR",
        "category": "ZX BASIC",
        "icon": "$(database)"
      },
      {
        "command": "zx-basic.saveToMdr",
        "title": "Save to MDR",
        "category": "ZX BASIC",
        "icon": "$(save)"
      },
      {
        "command": "zx-basic.extractVariable",
        "title": "Extract Variable",
        "category": "ZX BASIC Refactoring"
      },
      {
        "command": "zx-basic.renumberLines",
        "title": "Renumber Lines",
        "category": "ZX BASIC Refactoring"
      },
      {
        "command": "zx-basic.extractSubroutine",
        "title": "Extract Subroutine",
        "category": "ZX BASIC Refactoring"
      },
      {
        "command": "zx-basic.recordFromZx",
        "title": "Record from ZX Spectrum",
        "category": "ZX BASIC",
        "icon": "$(mic)"
      },
      {
        "command": "zx-basic.stopZxRecording",
        "title": "Stop ZX Recording",
        "category": "ZX BASIC",
        "icon": "$(debug-stop)"
      },
      {
        "command": "zx-basic.insertZxGraphics",
        "title": "Insert ZX Graphics Character",
        "category": "ZX BASIC",
        "icon": "$(symbol-char)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "zx-basic.transfer",
          "when": "editorLangId == zx-basic"
        },
        {
          "command": "zx-basic.receiveFromZx",
          "when": "editorLangId == zx-basic"
        },
        {
          "command": "zx-basic.testRS232",
          "when": "editorLangId == zx-basic"
        },
        {
          "command": "zx-basic.listSerialPorts"
        },
        {
          "command": "zx-basic.saveAsTzx",
          "when": "editorLangId == zx-basic"
        },
        {
          "command": "zx-basic.playToZx",
          "when": "editorLangId == zx-basic"
        },
        {
          "command": "zx-basic.stopTzxPlayback"
        },
        {
          "command": "zx-basic.loadFromMdr",
          "when": "editorLangId == zx-basic"
        },
        {
          "command": "zx-basic.saveToMdr",
          "when": "editorLangId == zx-basic"
        },
        {
          "command": "zx-basic.extractVariable",
          "when": "editorLangId == zx-basic"
        },
        {
          "command": "zx-basic.renumberLines",
          "when": "editorLangId == zx-basic"
        },
        {
          "command": "zx-basic.extractSubroutine",
          "when": "editorLangId == zx-basic"
        },
        {
          "command": "zx-basic.recordFromZx",
          "when": "editorLangId == zx-basic"
        },
        {
          "command": "zx-basic.insertZxGraphics",
          "when": "editorLangId == zx-basic"
        },
        {
          "command": "zx-basic.stopZxRecording"
        }
      ],
      "editor/title": [
        {
          "command": "zx-basic.transfer",
          "alt": "zx-basic.transfer",
          "when": "editorLangId == zx-basic",
          "group": "navigation"
        },
        {
          "command": "zx-basic.playToZx",
          "when": "editorLangId == zx-basic",
          "group": "1_modification"
        },
        {
          "command": "zx-basic.recordFromZx",
          "when": "editorLangId == zx-basic",
          "group": "1_modification"
        },
        {
          "command": "zx-basic.loadFromMdr",
          "when": "editorLangId == zx-basic",
          "group": "1_modification"
        },
        {
          "command": "zx-basic.saveToMdr",
          "when": "editorLangId == zx-basic",
          "group": "1_modification"
        },
        {
          "command": "zx-basic.extractVariable",
          "when": "editorLangId == zx-basic",
          "group": "2_refactoring",
          "submenu": "Refactor..."
        },
        {
          "command": "zx-basic.renumberLines",
          "when": "editorLangId == zx-basic",
          "group": "2_refactoring",
          "submenu": "Refactor..."
        }
      ],
      "editor/context": [
        {
          "command": "zx-basic.transfer",
          "when": "editorLangId == zx-basic",
          "group": "1_rs232"
        },
        {
          "command": "zx-basic.receiveFromZx",
          "when": "editorLangId == zx-basic",
          "group": "1_rs232"
        },
        {
          "command": "zx-basic.playToZx",
          "when": "editorLangId == zx-basic",
          "group": "2_audio"
        },
        {
          "command": "zx-basic.recordFromZx",
          "when": "editorLangId == zx-basic",
          "group": "2_audio"
        },
        {
          "command": "zx-basic.loadFromMdr",
          "when": "editorLangId == zx-basic",
          "group": "3_mdr"
        },
        {
          "command": "zx-basic.saveToMdr",
          "when": "editorLangId == zx-basic",
          "group": "3_mdr"
        },
        {
          "command": "zx-basic.extractVariable",
          "when": "editorLangId == zx-basic",
          "group": "4_refactoring",
          "submenu": "Refactor..."
        },
        {
          "command": "zx-basic.renumberLines",
          "when": "editorLangId == zx-basic",
          "group": "4_refactoring",
          "submenu": "Refactor..."
        },
        {
          "command": "zx-basic.extractSubroutine",
          "when": "editorLangId == zx-basic && editorHasSelection",
          "group": "4_refactoring",
          "submenu": "Refactor..."
        },
        {
          "command": "zx-basic.insertZxGraphics",
          "when": "editorLangId == zx-basic",
          "group": "5_graphics"
        }
      ]
    },
    "configuration": [
      {
        "title": "ZX BASIC",
        "properties": {
          "zxBasic.model": {
            "type": "string",
            "enum": [
              "48K",
              "128K",
              "Interface1"
            ],
            "default": "48K",
            "description": "Target ZX Spectrum model for language features and validation"
          },
          "zxBasic.strictMode": {
            "type": "boolean",
            "default": false,
            "description": "Warn about non-standard BASIC syntax and features not available in target model"
          },
          "zxBasic.lineNumberIncrement": {
            "type": "number",
            "default": 10,
            "description": "Default increment for auto-numbering lines (e.g., 10, 20, 30...)"
          },
          "zxBasic.maxLineLength": {
            "type": "number",
            "default": 255,
            "description": "Warn when a line exceeds this length (ZX Spectrum supports up to 255 chars)"
          },
          "zxBasic.uppercaseKeywords": {
            "type": "boolean",
            "default": true,
            "description": "Auto-uppercase keywords on completion and formatting"
          },
          "zxBasic.enableFormatOnType": {
            "type": "boolean",
            "default": true,
            "description": "Enable immediate keyword uppercasing as you type (when space/enter is pressed)"
          },
          "zxBasic.mdr": {
            "type": "object",
            "default": {
              "errorPolicy": "fix-data",
              "defaultCartridgeName": "ZXBASIC",
              "showSectorMapOnError": true,
              "maxRetries": 3
            },
            "properties": {
              "zxBasic.mdr.errorPolicy": {
                "type": "string",
                "enum": [
                  "strict",
                  "lenient",
                  "fix-data"
                ],
                "default": "fix-data",
                "description": "Error handling policy for corrupted MDR sectors: strict (fail on errors), lenient (warn but proceed), fix-data (attempt automatic repair)"
              },
              "zxBasic.mdr.defaultCartridgeName": {
                "type": "string",
                "default": "ZXBASIC",
                "maxLength": 10,
                "description": "Default cartridge name for new MDR files (max 10 characters)"
              },
              "zxBasic.mdr.showSectorMapOnError": {
                "type": "boolean",
                "default": true,
                "description": "Show detailed sector error map when loading MDR files with checksum errors"
              },
              "zxBasic.mdr.maxRetries": {
                "type": "number",
                "default": 3,
                "minimum": 1,
                "maximum": 10,
                "description": "Maximum number of retries when reading problematic sectors from physical Microdrive cartridges"
              }
            }
          },
          "zxBasic.rs232.port": {
            "type": "string",
            "default": "/dev/ttyUSB0",
            "description": "Serial port path for RS232 communication (e.g., /dev/ttyUSB0, COM3)"
          },
          "zxBasic.rs232.baudRate": {
            "type": "number",
            "enum": [
              1200,
              2400,
              4800,
              9600,
              19200
            ],
            "default": 9600,
            "description": "Baud rate for RS232 communication with ZX Spectrum Interface 1"
          },
          "zxBasic.rs232.mode": {
            "type": "string",
            "enum": [
              "binary",
              "text"
            ],
            "default": "binary",
            "enumDescriptions": [
              "8-bit binary mode (FORMAT \"b\") - for program transfers",
              "7-bit text mode with RTS/CTS handshaking (FORMAT \"p\") - for text/printer output"
            ],
            "description": "RS232 communication mode for Interface 1"
          },
          "zxBasic.rs232.timeout": {
            "type": "number",
            "default": 30000,
            "minimum": 1000,
            "maximum": 120000,
            "description": "Timeout in milliseconds for RS232 operations (default: 30 seconds)"
          },
          "zxBasic.rs232.handshaking": {
            "type": "boolean",
            "default": true,
            "description": "Enable hardware RTS/CTS handshaking for reliable transfers"
          }
        }
      }
    ]
  },
  "activationEvents": [
    "onLanguage:zx-basic",
    "onCommand:zx-basic.transfer",
    "onCommand:zx-basic.saveAsTzx",
    "onCommand:zx-basic.playToZx",
    "onCommand:zx-basic.stopTzxPlayback",
    "onCommand:zx-basic.recordFromZx",
    "onCommand:zx-basic.stopZxRecording",
    "onCommand:zx-basic.loadFromMdr",
    "onCommand:zx-basic.insertZxGraphics",
    "onCommand:zx-basic.saveToMdr"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run prepare-extension",
    "prepare-extension": "cd .. && npm run build:tsc && cd lsp-server && npm run bundle || true && cd ../vscode-extension && npm run bundle && node ./scripts/copy-built.js",
    "clean": "rm -rf out && mkdir -p out && echo 'cleaned'",
    "compile": "tsc -p ./",
    "bundle": "npx esbuild src/extension.ts --bundle --platform=node --external:vscode --external:serialport --outfile=out/extension.js --target=node18 --sourcemap",
    "dev": "npm run compile && node ./scripts/copy-built.js",
    "build": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.0"
  },
  "optionalDependencies": {
    "serialport": "^13.0.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.94.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^2.2.42",
    "@types/node": ">=20.0.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "glob": "^8.0.0",
    "mocha": "^10.0.0",
    "typescript": "^4.9.0",
    "vsce": "^2.15.0",
    "esbuild": "^0.18.0"
  }
}
